<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_round"
        android:includeFontPadding="true"
        android:onClick="return_btn"
        android:text="@string/restart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_popup_sync"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginTop="124dp"
        android:text="@string/score"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edit_round"
        android:gravity="center_horizontal"
        android:text="@string/_0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="176dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:text="@string/current_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:src="@android:mipmap/sym_def_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/Block1"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="340dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="0"
        android:rotationY="0"
        android:src="@drawable/blockstyle"
        android:tag="00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Block3"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="340dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="0"
        android:rotationY="2"
        android:src="@drawable/blockstyle"
        android:tag="02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Block2"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="340dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="0"
        android:rotationY="1"
        android:src="@drawable/blockstyle"
        android:tag="01"
        app:layout_constraintEnd_toStartOf="@+id/Block3"
        app:layout_constraintStart_toEndOf="@+id/Block1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Block4"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="1"
        android:rotationY="0"
        android:src="@drawable/blockstyle"
        android:tag="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Block1" />

    <ImageView
        android:id="@+id/Block6"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="1"
        android:rotationY="2"
        android:src="@drawable/blockstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Block3" />

    <ImageView
        android:id="@+id/Block5"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="1"
        android:rotationY="1"
        android:src="@drawable/blockstyle"
        android:tag="11"
        app:layout_constraintEnd_toStartOf="@+id/Block6"
        app:layout_constraintStart_toEndOf="@+id/Block4"
        app:layout_constraintTop_toBottomOf="@+id/Block2" />

    <ImageView
        android:id="@+id/Block7"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="2"
        android:rotationY="0"
        android:src="@drawable/blockstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Block4" />

    <ImageView
        android:id="@+id/Block9"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="2"
        android:rotationY="2"
        android:src="@drawable/blockstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Block6" />

    <ImageView
        android:id="@+id/Block8"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick_BlockBtn"
        android:rotationX="2"
        android:rotationY="1"
        android:src="@drawable/blockstyle"
        app:layout_constraintEnd_toStartOf="@+id/Block9"
        app:layout_constraintStart_toEndOf="@+id/Block7"
        app:layout_constraintTop_toBottomOf="@+id/Block5" />

</androidx.constraintlayout.widget.ConstraintLayout>